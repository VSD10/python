def sum(a,b):
    
    return a+b
    
def sub(a,b):
    return a-b

def mul(a,b):
    return a*b
    
def div(a,b):
    return a/b
    
    
    
print("\n\t\twelcome to the calculator")
print("select the option form the below:")
print(" 1.ADDITON \n 2.SUBTRACTION \n 3.MULTIPLICATION \n 4.DIVISION ")
choice=int(input(":"))
a=int(input("enter a value of a:"))
b=int(input("enter a value of b:"))

if choice==1:
    print(sum(a,b))

elif choice==2:
    print(sub(a,b))

elif choice==3:
    print(mul(a,b))
    
elif choice==4:
    print(div(a,b))
else:
    print("enter a valid number")
